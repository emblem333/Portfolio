 <div class="comments-section mt-5">
 <%= form_with(model:[hobbies, hobby_comment], local: true) do |f| %>
  <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに",class:"form-control" %>
  <%= f.submit "送信する", class: "btn btn-primary mt-2" %>
 <% end %>
<p>コメント件数：<%= hobbies.hobby_comments.count %></p>
<% hobbies.hobby_comments.each do |hobby_comment| %>
<div class="comment mb-1">
  <span class="comment-user"><%= hobby_comment.user.name %></span>
  <span class="comment-text"><%= hobby_comment.comment %></span>
  <span class="comment-date"><%= hobby_comment.created_at.strftime('%Y/%m/%d') %></span>
  <% if admin_signed_in? || hobby_comment.user == current_user %>
    <%= link_to "削除", hobby_hobby_comment_path(hobby_comment.hobby, hobby_comment), method: :delete,remote: true,class:"btn btn-danger btn-sm" %></td>
  <% end %>
</div>
<% end %>
</div>