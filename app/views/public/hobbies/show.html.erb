<section class="inner">
	<h2 class="section-ttl">詳細</h2>
	<div class="flex">
		<div>
			<div class="image_field">
				<%= image_tag @hobby.get_image, id: "img_prev", class: "hobby_image" %>
			</div>
		</div>
		<table class="admin_item_info">
			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>名</td>
					<td><%= @hobby.name %></td>
				</tr>
				<tr>
					<td>説明</td>
					<td><%= @hobby.introduction %></td>
				</tr>
				<tr>
					<td>ジャンル</td>
					<td><%= link_to @hobby.genre.name, hobbies_path(genre_id: @hobby.genre_id), class: "underline" %></td>
				</tr>
				<tr>
			</tbody>
		</table>
		<div class="flex align-center pl5">
			<%= link_to "編集する", edit_hobby_path(@hobby), class: "btn btn-success" %>
		</div>
	</div>
</section>