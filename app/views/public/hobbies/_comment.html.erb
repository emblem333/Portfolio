<div class="comments-section">
  <p>コメント件数：<%= hobby.hobby_comments.count %></p>
  <% hobby.hobby_comments.each do |comment| %>
    <div class="comment">
      <span class="comment-user"><%= comment.user.name %></span>
      <span class="comment-text"><%= comment.comment %></span>
      <span class="comment-date"><%= comment.created_at.strftime('%Y/%m/%d') %></span>
      <% if admin_signed_in? || comment.user.name == current_user.name %>
        <%= link_to "削除する", hobby_comment_path(hobby_comment.hobby, hobby_comment), method: :delete, class: "btn btn-danger btn-sm" %>
      <% end %>
    </div>
  <% end %>
</div>
