<p>コメント件数：<%= hobby.hobby_comments.count %></p>
  <% hobby.hobby_comments.each do |comment| %>
      <%= comment.user.name %>
      <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
    <% if comment.user == current_user %>
      <%= link_to "削除する", hobby_hobby_comments_path(hobby, comment), method: :delete ,class: "btn btn-danger" %>
    <% end %>
  <% end %>