<section class="wrapper flex">
	<div class="sidebar">
		<h4>ジャンル一覧</h4>
		<% @genres.each do |genre| %>
			<%= link_to genre.name, hobbies_path(genre_id: genre.id)%>
		<% end %>
	</div>
		<% if params[:genre_id] %>
			<h2 class="section-ttl"><%= @genre.name %>の趣味一覧 (全<%= @all_hobbies_count %>件)</h2>
